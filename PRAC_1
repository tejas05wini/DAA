# Problem Statement 

#Write a program to calculate Fibonacci numbers and find its step count.

//A. recursive method (CODE) 
 
#include <iostream> 
using namespace std; 
 
int fibonacciRecursive(int n) { 
    if (n <= 1) return n; // Base case 
    return fibonacciRecursive(n - 1) + fibonacciRecursive(n - 2); 
} 
int main() { 
    int n; 
    cout << "Enter n: "; 
    cin >> n; 
 
    cout << "Fibonacci series (Recursive): "; 
    for (int i = 0; i < n; i++) { 
        cout << fibonacciRecursive(i) << " "; 
    } 
    return 0; 
}

//B. non - recursive method (CODE) 
 
#include <iostream> 
using namespace std; 
 
void fibonacciIterative(int n) { 
    int a = 0, b = 1, c; 
    if (n >= 1) cout << a << " "; 
    if (n >= 2) cout << b << " "; 
 
    for (int i = 2; i < n; i++) { 
        c = a + b; 
        cout << c << " "; 
        a = b; 
        b = c; 
    } 
} 
 
int main() { 
    int n; 
    cout << "Enter n: "; 
    cin >> n; 
 
    cout << "Fibonacci series (Iterative): "; 
    fibonacciIterative(n); 
    return 0; 
} 
